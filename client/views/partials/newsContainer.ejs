<% listArticles.forEach(element => { %>
   <div onclick="window.open('<%-baseURL%>type=article&id=<%-element.id%>')" id="<%- element.id %>" class="newsRubrique" name="thumb">
     <img class='thumbImg' src="<%baseURL%>public/img/<%-element.thumbail%>">
     <b><%- element.title.substring(0,40) %>...</b>
     <p><%- element.content.substr(0,100).replace(/(<([^>]+)>)/gi, "") %>...</p>
   </div>
<% }); %>

<br><br>

<% if (indexArticlesPrecedents >= 0) { %>
<button class="buttonLinkLeft">
